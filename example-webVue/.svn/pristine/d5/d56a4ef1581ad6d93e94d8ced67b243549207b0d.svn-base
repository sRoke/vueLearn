<template>
  <div id="customerDetail">
    <el-tabs v-model="activeName"
             @tab-click="handleClick">
      <el-tab-pane label="基础信息"
                   name="baseInfo">
        <baseInfo ref='info'
                  type="myClient"
                  v-on:demandRecord="onChildChange"></baseInfo>
      </el-tab-pane>
      <el-tab-pane label="注册信息"
                   name="regInfo"
                   class='marrl-5'>
        <regInfo></regInfo>
      </el-tab-pane>
      <el-tab-pane label="需求记录"
                   name="record"
                   class='marrl-5'>
        <record ref='record'></record>
      </el-tab-pane>
    </el-tabs>
  </div>
</template>

<style type="text/css">
#customerDetail .el-tabs__item {
  border: 1px solid #d3dce6;
  border-bottom: 0px;
  border-radius: 5px;
  margin-right: 8px;
}

#customerDetail .el-tabs__active-bar {
  display: none;
}

#customerDetail .num {
  display: inline;
  position: absolute;
  height: 25px;
  z-index: 99;
  line-height: 25px;
  width: 25px;
  font-size: 12px;
  border: 1px solid #fff;
  border-radius: 50%;
  box-shadow: 0px 0px 5px #888888;
  text-align: center;
  color: #fff;
  background: #20a0ff;
}

#customerDetail .record-num {
  top: 12px;
  left: 205px;
}
</style>

<script>
import baseInfo from '../common/info.vue'
import record from './record.vue'
import regInfo from 'common/reg-info.vue'

export default {
  data() {
    return {
      activeName: 'baseInfo',
      infoId: 0,
      match: ''
    }
  },
  watch: {
    '$route'(to, from) {             // 监听路由改变
      this.init()
    }
  },
  methods: {
    init() {
      if (this.$route.query.index) {
        this.activeName = this.$route.query.index
      }
    },
    handleClick(tab, event) {
      this.activeName(tab.name)
      let data = {
        name: 'publicClientDetail',
        params: { id: this.infoId }, query: { index: this.activeName }
      }
      router.push(data)
    },
    onChildChange(res) {
      this.match = res
    }
  },
  created() {
    this.infoId = this.$route.params.id
    this.init()
  },
  components: {
    baseInfo,
    regInfo,
    record
  }
}
</script>